<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_back"
    android:orientation="vertical" >
    <!-- head start -->
    <RelativeLayout 
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/menu_item_selecotr"
        android:layout_marginTop="15dip"
        >
        <com.yzy.im.customview.AutoBgImageView 
            android:id="@+id/img_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            >
        </com.yzy.im.customview.AutoBgImageView>
        <TextView 
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_head"
            android:textColor="@color/menu_head_txt_color"
            android:textSize="22sp"
            android:layout_marginLeft="10dip"
            />
    </RelativeLayout>
    <!-- head end-->
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/menu_divider_color"
        />
    
    <!-- 我的资料 start -->
    <RelativeLayout 
        android:id="@+id/item_for_personinfo"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/menu_item_selecotr"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/img_item_personinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_info"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_item_personinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的资料"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_item_personinfo"
            android:textColor="@color/menu_item_txt_color"
             android:textSize="18sp"
            android:layout_marginLeft="12dip"
            />
        
    </RelativeLayout>
    <!-- 我的资料                end -->
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/menu_divider_color"
        />
    
    <RelativeLayout 
        android:id="@+id/item_for_addfriend"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:clickable="true"
        android:background="@drawable/menu_item_selecotr"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/img_item_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addfriend"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_item_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加好友"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_item_addfriend"
            android:textColor="@color/menu_item_txt_color"
             android:textSize="18sp"
            android:layout_marginLeft="12dip"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/menu_divider_color"
        />
    <RelativeLayout 
        android:id="@+id/item_for_myfile"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:clickable="true"
        android:background="@drawable/menu_item_selecotr"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/img_item_myfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myfile"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_item_myfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的文件"
            android:gravity="center_vertical"
            android:textColor="@color/menu_item_txt_color"
            android:textSize="18sp"
            android:layout_toRightOf="@id/img_item_myfile"
            android:layout_marginLeft="12dip"
            />
        
    </RelativeLayout>
     
     
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/menu_divider_color"
        />
      <RelativeLayout 
        android:id="@+id/item_for_setting"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:clickable="true"
        android:background="@drawable/menu_item_selecotr"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/img_item_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_item_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_item_setting"
            android:textColor="@color/menu_item_txt_color"
            android:textSize="18sp"
            android:layout_marginLeft="12dip"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/menu_divider_color"
        />
     <RelativeLayout 
        android:id="@+id/item_for_about"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:clickable="true"
        android:background="@drawable/menu_item_selecotr"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/img_item_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_item_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关于"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_item_about"
            android:textColor="@color/menu_item_txt_color"
            android:textSize="18sp"
            android:layout_marginLeft="12dip"
            />
        
    </RelativeLayout>

</LinearLayout>
